@model IEnumerable<HU_HDP.Models.AcademicUnit>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AcademicUnitType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AcademicUnitName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AcademicUnitAcronym)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AcademicUnitType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcademicUnitName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcademicUnitAcronym)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AcademicUnitId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AcademicUnitId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AcademicUnitId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
